{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./lib/**/*"
  ]
}
